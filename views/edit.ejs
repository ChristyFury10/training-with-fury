<%- include ("./header.ejs") %>

<form action="/exercises/<%= exercise._id %>?_method=PUT" method="post">
    <label>Name:<input type="text" name="name" placeholder="Exercise Name" value="<%=exercise.name%>"/></label><br>
    <label>Description:<input type="text" name="description" placeholder="Enter a description" value="<%=exercise.description%>"></label><br>
    <label>Tags (separate by comma):<input type="text" name="tags" placeholder="tags" value="<%=exercise.tags%>"></label><br>
    <label>Image:<input type="text" name="img" placeholder="image url" value="<%=exercise.img%>"></label>
    <input type="submit" value="Update">

</form>

<main>

    <div class="input-group mb-3">
        <form action="/exercises/<%= exercise._id %>?_method=PUT" method="post">
            <span class="input-group-text" id="inputGroup-sizing-default">Name:</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="name" placeholder="Exercise Name" value="<%=exercise.name%>">

            <span class="input-group-text" id="inputGroup-sizing-default">Tags (separate by comma):</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="tags" placeholder="tags" value="<%=exercise.tags%>">

            <br>
            <span class="input-group-text" id="inputGroup-sizing-default">Image URL:</span>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="img" placeholder="Leave blank if none" value="<%=exercise.img%>">

            <br>
            <span class="input-group-text" id="inputGroup-sizing-default">Description:</span>
            <textarea type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" name="description" placeholder="Enter a description"><%=exercise.description%></textarea>
            
            <br>
            <input type="submit" value="Update">
        </form>
    </div>

</main>

</body>
</html>